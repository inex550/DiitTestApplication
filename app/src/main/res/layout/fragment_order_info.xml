<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/order_info_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btns_ll"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/order_info_margin_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Дата заказа"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/order_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="от 18 июня 2020, 10:19"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginVertical="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/order_info_margin_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Статус"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="В работе"
                        tools:textColor="@color/green"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginVertical="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/order_info_margin_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Способ доставки"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/delivery_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Доставка курьером"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:paddingVertical="16dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/order_info_margin_horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Дата доставки"
                        android:textSize="12sp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/delivery_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="21.06.2020"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/delivery_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/delivery_date_tv"
                            android:layout_marginStart="12dp"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            tools:text="13:00 – 15:00"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Изменить"
                            android:textColor="#B7B9BE"
                            android:layout_centerVertical="true"
                            android:drawableStart="@drawable/pen_icon"
                            android:drawablePadding="4dp"
                            android:textSize="12sp"/>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginVertical="16dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/order_info_margin_horizontal">

                    <TextView
                        android:id="@+id/address_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Адрес доставки"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Москва, ул. Ленина, д. 10, кв. 10"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginVertical="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/order_info_margin_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Способ оплаты"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/payment_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Банковской картой онлайн"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginVertical="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/order_info_margin_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Бонусная карта"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/bonus_card_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1101323232323"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginVertical="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/order_info_margin_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Оформлен в магазине"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/shop_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Hoff Автозаводская"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/services_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Услуги"
                android:layout_marginStart="16dp"
                style="@style/Base.Widget.AppCompat.TextView.BlackBold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/services_list_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                tools:listitem="@layout/services_list_item"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сумма заказа"
                android:layout_marginStart="16dp"
                style="@style/Base.Widget.AppCompat.TextView.BlackBold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/bonuses_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Оплачено бонусами"
                        android:textColor="@color/medium_gray"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/dotted_line"/>

                    <TextView
                        android:id="@+id/bonuses_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="-350"
                        android:textColor="@color/medium_gray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ₽"
                        android:textColor="@color/medium_gray"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/discount_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_marginVertical="16dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Скидки"
                        android:textColor="@color/medium_gray"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/dotted_line"/>

                    <TextView
                        android:id="@+id/discount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="-600"
                        android:textColor="@color/medium_gray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ₽"
                        android:textColor="@color/medium_gray"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Итого"
                        style="@style/Base.Widget.AppCompat.TextView.BlackBold"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/total_sum_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="60 647"
                        style="@style/Base.Widget.AppCompat.TextView.BlackBold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ₽"
                        style="@style/Base.Widget.AppCompat.TextView.BlackBold"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/items_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="23 товара"
                style="@style/Base.Widget.AppCompat.TextView.BlackBold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/items_list_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/order_items_list_item"
                tools:itemCount="3"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/red"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/btns_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:text="Повторить заказ"
            android:textAllCaps="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отменить заказ"
            android:textColor="@color/red"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

</RelativeLayout>